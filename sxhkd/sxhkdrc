#####################
# Application keybindings #
#####################


super + shift + m
	~/bin/movie

alt + w
	~/bin/wifier

super + shift + v
	~/bin/launchvm

alt + b
	~/bin/battery

alt + c
	~/bin/changewallpapper

super + alt + d
	~/bin/deletewallpaper

super + Return
	kitty

super + alt + Return
	xterm
# rofi launchers
super + space
	rofi -show drun
   	
# rofi network manager	
super + n
	bash ~/bin/rofi-network-manager

# logout, shutdown, reboot
super + x
	~/bin/power
	
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'
# application launchers

alt + s
	~/bin/songchanger toggle

alt + Return
	alacritty

alt + t
	~/bin/time_date

alt + n
	~/bin/songchanger next

super + c
	~/bin/currentsong

#########
# Scrot #
#########
super + alt + @s
	scrot -s -e 'mv $f ~/Pictures/Screenshots'; \
	notify-send 'Scrot' 'Selected image to ~/Pictures/Screenshots'

super + s
	scrot -e 'mv $f ~/Pictures/Screenshots/scrot'; \
	notify-send 'Scrot' 'Image saved to ~/Pictures/Screenshots/scrot'
	
## redshift
super + alt + r
	~/bin/redshift-on
	
super + alt + b
	~/bin/redshift-off


## Show clipmenu
alt + v
    CM_LAUNCHER=rofi clipmenu 
    

 
